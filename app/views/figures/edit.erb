<h1>Update Figure: <%=@figure.name%></h1>

<form action="/figures/<%=@figure.id%>" method="post">

  <label>Updates the figure's name:</label>
  <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>">
  <br></br>

  <label>Choose Titles:</label>
  <br></br>
  <%Title.all.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_ids" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%=title.name%></input>
  <%end%>

  <br></br>
  <label>Choose Landmarks:</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_ids" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%=landmark.name%></input>
  <%end%>

  <br></br>
  <label>and/or, create a new landmark:</label>
  <br></br>
  <label>name of a new landmark:</label>
    <input  type="text" name="new_landmark">
  <br></br>

  <input type="submit" value="Edit Figure">

</form>
